<%= form_tag root_path, :method => 'POST' do %>
    <%= text_field_tag 'id', nil, placeholder: 'Enter Conpany Ticker Symbol', size: 50 %>
    <%= submit_tag 'Luckup stock quote' %>
<% end %>


<br/><br/>

<% if @stock %>
    <strong>Conpany name:</strong><%= @stock.name %> - <%= @stock.symbol %><br/>
    <strong>Current ask:</strong><%= @stock.l %><br/>
    <strong>Earrings per share:</strong><%= @stock.eps %><br/>
    <strong>price/earning ratio:</strong><%= @stock.pe %><br/>

<% elsif @nothing %>
    <%= @nothing %>
<% end %>


<% if @error %>
    <%= @error%>
<% end %>

