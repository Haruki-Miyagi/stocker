
<h1>Listing Stocks</h1>

<table class="table table-hover table-striped table-bordered">
  <thead>
    <tr>
      <th>Company name</th>
      <th>Ticker</th>
      <th>Current Price</th>
      <th>Company Worth</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @stocks.each do |stock| %>
      <% if stock.user_id == current_user.id %>
        <% begin %>
           <%  @stock_quote = StockQuote::Stock.quote(stock.ticker) %>
         <% rescue StandardError %>
           <tr>
              <td><%= link_to "N/A", stock %></td>
              <td><%= stock.ticker %></td>
              <td><%= "N/A" %></td>
              <td><%= "N/A" %></td>
              <td><%= link_to 'Destroy', stock, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% next %>
        <% end %>
        
        <tr>
          <td><%= link_to @stock_quote.name, stock %></td>
          <td><%= stock.ticker %></td>
          <td><%= @stock_quote.l %></td>
          <td><%= @stock_quote.mc %></td>
          <td><center><%= link_to 'Destroy', stock, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs" %></center></td>
        </tr>
       <% end %> 
      <% end %>
  </tbody>
</table>

<br>

